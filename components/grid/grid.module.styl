border = 1px dashed #000
.row
  border-bottom border
  &:last-child
    border-bottom 0
.item
  // padding-top 100%
  border-right border
  overflow hidden
  &:last-child
    border-right 0
  // 使用before和after来实现正方形，不需要额外的元素
  &:before
    content ''
    padding-top 100%
    float left
  &:after
    content ''
    display block
    clear both

.itemHover
  &:hover
    background-color rgba(0,0,0,0.2)