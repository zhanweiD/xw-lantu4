
.colorBox
  height 24px
  width 40px
  position relative
  background-color rgba(255,255,255,0.15)
  transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  cursor pointer
  border 1px solid #1c1c1c
  // padding 4px
.colorValue
  // width 25px
  // height 15px
  top 4px
  right 4px
  bottom 4px
  left 4px
.cover
  position fixed
  top 0
  right 0
  bottom 0
  left 0
.pickerBox
  position fixed
  line-height 1
  font-weight 400
  top 30px
  left 30px
  z-index 21001
  &_readOnly
    pointer-events none
  *
    box-sizing unset
  input
    line-height unset
    height 14px
    color #222
    font-weight 400