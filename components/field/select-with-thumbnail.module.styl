.optionText
  bottom 0
.iconHeight
  height 16px
.icon
  background-size 100% 100%
  background-repeat no-repeat
  background-position: center center
.position
  top 0
  left 0
  right 0
  bottom 0
.gridBorder
  top -4px
  left -4px
  right -4px
  bottom -4px
  border-right 1px solid rgba(0, 0, 0, 0.1)
.bottomLine
  left 48px
  right 0
  top 0
  bottom 0
  border-bottom 1px solid rgba(255, 255, 255, 0.1)
  &:hover, &:focus
    border-bottom 1px solid #07f