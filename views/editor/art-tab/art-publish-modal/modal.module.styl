@import '../../../../utils/theme-vars.styl'

.align
  align-items baseline
.link
  height 26px
  border-bottom 1px solid rgba(255,255,255,0.15)
  &:hover
    color rgba(255,255,255,0.8)
.copyButton
  border-radius 3px
  height 25px
  line-height 25px
  text-align center
.publishButton
  height 40px
  line-height 40px
  background #467fcc
  border-radius 3px
  text-align center
  font-size 16px
.disableButton
  cursor not-allowed
  background: rgba(70,127,204,0.65);
  color: rgba(255,255,255,0.45);
.onlineCircle
  width 5px
  height 5px
  border-radius 5px
  margin-right 4px
.themeColorBg
  background themeColor
.radioDiv
  width: 14px
  height: 14px
  border: 1px solid rgba(153,153,153,1);
  border-radius: 50%
.checkRadioDiv
  border: 1px solid rgba(0,183,255,1);
  border-radius: 50%
.checkRadioBG
  border-radius: 50%
  width: 8px;
  height: 8px;
  background: #00B7FF;

