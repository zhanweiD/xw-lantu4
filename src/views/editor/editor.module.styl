@import '../../utils/theme-vars.styl'

.editor
  // 13寸的分辨率 普通（1366×768），mac（2560x1600）
  min-width 600px
  z-index 0

.tab
  overflow hidden

.tabName
  height 32px
  line-height 32px
  border-bottom 2px solid transparent
  padding 0 0 0 12px
  background-color rgba(255,255,255,0.06)
  margin-right 1px
  // 最多16个中文字
  max-width 240px
  min-width 70px
  &:hover .tabCloseIcon
    visibility visible
  &_active
    border-bottom-color themeColor!important
    background-color rgba(255,255,255,0.1)
    & .tabCloseIcon
      visibility visible
.tabCloseIcon
  visibility hidden

.tabContents
  background-color #232323

.tabContent
  position absolute
  top 0
  left 0
  overflow hidden
  visibility hidden
  &_active
    visibility visible

.logo
  width 400px
  // opacity .1
.initEditor
  background-image: linear-gradient(180deg, #1A1B1C 0%, #37393D 100%)

.confirmModal
  padding 50px
  font-size 14px
  letter-spacing 1px

.icon
  display inline
  color rgb(239,176,65)
  margin-right 5px
  font-size 15px

  