.layer
  overflow hidden
.layerItemBox
  border-bottom 1px solid rgba(0,0,0,0.3)
  &:hover
    background-color #3a3a3a
.selectLayerItemBox
  // background-color rgba(255,255,255, 0.05)
  background-color #0077ff !important
.cf
  color #fff
.layerPanelContainer
  min-height 80px
  background-color rgba(255,255,255,0.03)
  line-height: 0
  background-position top center
  background-repeat: no-repeat
  background-size cover
.activeArt
  color #339BFF
  font-weight 400
.toolIconHighlight
  opacity .6
  &:hover
    opacity 1
.noDrop
  cursor no-drop

.hoverBottom
  border-bottom 2px solid #57A5FF
.hoverTop
  border-top 2px solid #57A5FF
.bottomLeft, .bottomRight, .topLeft, .topRight
  width 6px
  height 6px
  border 2px solid #57a5ff
  border-radius 6px
  background-color #fff
.hoverBoxBtm
  margin-top -6px
.hoverBoxTop
  margin-bottom -6px

