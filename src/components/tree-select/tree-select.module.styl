.tree_select
  & .checkbox 
      margin 0
      cursor pointer
      color inherit
      font-size inherit
      font-family inherit
      line-height inherit
      width 14px
      height 14px
      -webkit-appearance none
      outline none
      border 1px solid rgba(255, 255, 255, .2)
      position relative
      &:after
        display block
        width 14px
        height 14px
        content '\2713'
        text-align center
        line-height 14px
        color #fff
        position absolute
        left -1px
        top -1px
        visibility hidden
      &:checked
        background #07f
        &:after
          visibility visible
      &:focus
        border-bottom 1px solid rgba(255, 255, 255, .2)
  & .select_item
    height 24px
    line-height 24px



