.row
  margin-bottom 1px
  &:last-child
    margin-bottom 0
.item
  // padding-top 100%
  margin-right 1px
  background-color rgba(255,255,255,0.06)
  overflow hidden
  &:last-child
    margin-right 0
  // 使用before和after来实现正方形，不需要额外的元素
  &:before
    content ''
    padding-top 100%
    float left
  &:after
    content ''
    display block
    clear both

.itemHover
  &:hover
    background-color rgba(255,255,255,0.02)