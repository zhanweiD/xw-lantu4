@import '../../utils/theme-vars.styl'

.wrap
  width 133px
  height 20px
  border-radius 10px
  background-color rgba(255,255,255,0.1)
  overflow hidden
.checkOption
  line-height 20px
  cursor pointer
  color #ddd
  text-align center
  &_checked
    background-color themeColor!important
    color #fff
  &:hover
    background-color rgba(255,255,255,0.14)
  &:active
    background-color rgba(255,255,255,0.10)