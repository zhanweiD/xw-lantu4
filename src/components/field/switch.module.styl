@import '@utils/theme-vars.styl'

.switch
  height 24px
  width 34px
  border-radius 14px
  position relative
  border 1px solid rgb(28, 28, 28)
  background rgba(255,255,255, .15)
  transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
  cursor pointer
  &:after
    content ''
    display block
    width 16px
    height 16px
    position absolute
    left 5px
    top 50%
    margin-top -8px
    border-radius 8px
    background #222
    transition left 150ms cubic-bezier(0.4, 0, 0.2, 1)
  &_on
    background-color themeColor
    &:after
      left 12px
  &_readOnly
    pointer-events none