.rect
  top 4px
  left 4px
  right 4px
  bottom 4px

.circle
  width 8px
  height 8px
  border 1px solid #fff
  border-radius 8px
  top -4px
  cursor ew-resize

.baseLine
  background rgba(255, 255, 255, 1)
  height 1px
  // outline 1px solid rgba(255, 255, 255, 0.8)

.activeCircle
  transform scale(1.3)

.cover
  position fixed
  top 0
  right 0
  bottom 0
  left 0
.pickerBox
  position fixed
  line-height 1
  font-weight 400
  top 30px
  z-index 21001
  &_readOnly
    pointer-events none
  *
    box-sizing unset
  input
    line-height unset
    height 14px
    color #222
    font-weight 400
