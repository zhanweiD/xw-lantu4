@import '../../../utils/theme-vars.styl'

.checkOption
  border-left 1px solid #2a2a2a
  height 24px
  line-height 24px
  background-color rgba(255,255,255,0.1)
  cursor pointer
  overflow hidden
  color #ddd
  padding 0 10px
  margin-left -1px
  text-align center
  &_checked
    background-color themeColor!important
    color #fff
  &:first-child
    border-left none
    margin-left 0
  &:hover
    background-color rgba(255,255,255,0.14)
  &:active
    background-color rgba(255,255,255,0.10)