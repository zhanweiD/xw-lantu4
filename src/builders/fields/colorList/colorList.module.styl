.rect
  top 4px
  left 4px
  right 4px
  bottom 4px

.circle
  width 8px
  height 8px
  border 1px solid #fff
  border-radius 8px
  top -4px
  left -4px
  cursor ns-resize

.baseLine
  background rgba(255, 255, 255, 1)
  height 158px
  width 1px
  // outline 1px solid rgba(255, 255, 255, 0.8)

.activeCircle
  transform scale(1.3)
.btmButton
  display flex
  justify-content end
  margin-top -28px
  margin-right: 8px
.btnLeft
  background-color rgba(0,0,0,0.1)
  color rgba(0,0,0,.85)
  padding 6px 16px
  border-radius 4px
  margin-right 8px
.btnRight
  background-color #007EFF
  color rgba(255,255,255,1)
  padding 6px 16px
  border-radius 4px
.cover
  position fixed
  top 0
  right 0
  bottom 0
  left 0
.rectBox
  position fixed
  z-index 21002
  height 158px
  width 24px
  margin-top -314px
  margin-left 215px
.pickerBox
  position fixed
  line-height 1
  font-weight 400
  top 30px
  z-index 21001
  &_readOnly
    pointer-events none
  *
    box-sizing unset
  input
    line-height unset
    height 14px
    color #222
    font-weight 400
.colorListBox
  width 218px
  overflow auto
.colorBox
  background rgba(255,255,255,0.15)
  border 1px solid #1c1c1c
.iconDel
  position absolute
  top -1px
  left 23px
