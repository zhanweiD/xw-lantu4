@import '../../../utils/theme-vars.styl'

.range
  position absolute
  top 0
  height 24px
  line-height 24px
  padding 0 8px
  right 0
  &_right24
    right 24px

input[type="range"]
  -webkit-appearance none
  height 8px
  border none
  padding-bottom 7px
  bottom -3.5px
  left -4px
  width calc(100% + 8px)
input[type="range"]::-webkit-slider-runnable-track
  -webkit-appearance none
  height 1px
input[type="range"]::-webkit-slider-thumb
  -webkit-appearance: none;
  width 8px
  height 8px
  z-index 100
  background-color themeColor
  border 1px solid #ffffff
  border-radius 50% /*外观设置为圆形*/
  cursor ew-resize
input[type=range]:focus
  outline: none
  border none
.sliderFocus
  border-bottom 1px solid themeColor !important

u(n)
  n == 0 ? n : unit(n, "%")
for $n in 0 20 40 60 80 100
  .scale{$n}
    left u($n)
.scaleBase
  height 4px
  width 4px
  border 1px solid themeColor
  border-radius 50%
  bottom -1.5px
  margin-left -2px
  background #fff

